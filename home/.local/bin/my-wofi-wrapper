#!/usr/bin/env bash

last_layout=$(swaymsg -t get_inputs -r \
  | jq -r '.[] | select(.type=="keyboard") | .xkb_active_layout_index' \
  | head -n1)

# Switch to English (index 0)
swaymsg input "*" xkb_switch_layout 0 > /dev/null

wofi $@

swaymsg input "*" xkb_switch_layout "$last_layout" > /dev/null

